<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/TestLoveApp_relativeLayouts">

    <TextView
        style="@style/TestLoveApp_textViews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/lblPregunta"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="false"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="10dp"/>
    <EditText
        style="@style/TestLoveApp_textViews"
        android:id="@+id/editTextRespuesta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="15"
        android:inputType="text"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/lblPregunta"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>

    <Button
        style="@style/TestLoveApp_buttons"
        android:layout_width="127dp"
        android:layout_height="wrap_content"
        android:text="Responder"
        android:id="@+id/btnResponder"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/editTextRespuesta"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>


</RelativeLayout>